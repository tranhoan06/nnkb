<!DOCTYPE html>
<html>
<head>
    <%-include('layout/head', {title : 'Danh Mục Sản Phẩm'})%>
    <link rel="stylesheet" href="/static/site/css/category.css">
</head>
<body>

<!--	Header	-->
<%-include('layout/header')%>

<!--	End Header	-->

<!--	Body	-->
<div id="body">
	<div class="container">
        <%-include('layout/menu')%>

        <div class="row">
        	<div id="main" class="col-lg-8 col-md-12 col-sm-12">
            	<!--	Slider	-->
                <%-include('layout/slider')%>

                <!--	End Slider	-->
                
                <!--	List Product	-->
                <div class="products">
                    <h3><%=title%> (hiện có <%=totalProduct%> sản phẩm)</h3>
                    <div class="product-list card-deck">
                        <%for(product of products){%>
                            <%-include('components/product-item', { product })%>
                        <%}%>
                    </div>
                   
                </div>
                <!--	End List Product	-->
                
                <div id="pagination">
                    <ul class="pagination">
                        <%if(page > 1){%>
                            <li class="page-item"><a class="page-link" href="/category-<%=slug%>.<%=id%>?page=<%=page-1%>">Trang trước</a></li>
                        <%}%>
                        <%for(x in pages){%>
                            <%if(pages[x]==="..."){%>
                                <li class="page-item"><a class="page-link" onclick="return false;" href=""><%=pages[x]%></a></li>    
                            <%}else{%>
                            <li class="page-item <%=page==pages[x] ? 'active' : '' %> "><a class="page-link" href="/category-<%=slug%>.<%=id%>?page=<%=pages[x]%>"><%=pages[x]%></a></li>
                        <%}}%>
                        <%if(page < totalPage){%>
                            <li class="page-item"><a class="page-link" href="/category-<%=slug%>.<%=id%>?page=<%=page+1%>">Trang sau</a></li>
                            
                        <%}%>
                        
                    </ul> 
                </div>
                
            </div>
            
            <%-include('layout/sidebar')%>

        </div>
    </div>
</div>
<!--	End Body	-->
<%-include('layout/footer')%>

<!--	End Footer	-->













</body>
</html>
